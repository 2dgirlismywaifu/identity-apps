/*******************************
    Edit Segment Variation
*******************************/

.ui.segment {
    &.edit-segment {
        background: @editSegmentBackgroundColor;
        box-shadow: none;
        border: none;

        &.top-margin {
            margin-top: @editSegmentMarginTop;
        }
        .edit-segment-table {
            .values-cell {
                max-width: @editSegmentTableValueMaxWidth;
                text-overflow: ellipsis;
                overflow: hidden;
                white-space: nowrap;

                .values-list {
                    .item {
                         max-width: @editSegmentTableValueMaxWidth;
                         overflow: hidden;
                         text-overflow: ellipsis;
                         white-space: nowrap
                     }
                }
            }
        }
    }
}

/*******************************
     Danger Zone Variation
*******************************/

.ui.segments {
    &.danger-zone-group {
        box-shadow: none;
        border: 1px solid @red;
        border-radius: @defaultBorderRadius;

        .group-header {
            font-weight: 500;
        }
        .ui.segment {
            &.danger-zone {
                border: none;
                border-bottom: 1px solid @red;

                &:last-child {
                    border-bottom: none;
                }
            }
        }
    }
}

.ui.segment {
    &.danger-zone {
        background: transparent;
        box-shadow: none;
        border: 1px solid @red;
        border-radius: @defaultBorderRadius;

        .sub-header {
            margin-top: 5px;
        }
    }
}

/*******************************
     User List Variation
*******************************/

.ui.segment {
    &.user-role-list-segment {
        margin-top: @userRolesListSegmentMarginTop;
        height: @userRolesListSegmentHeight;
        overflow: auto;

        .user-role-list-item {
            display: flex;
            align-items: center;
        }

        .user-role-list-item i{
            margin-left: auto;
        }

        .user-role-list-item .user-image {
            background-color: #ccc;
            padding: 0px !important;
        }
    }

    &.user-assigned-roles-segment {
        height: @assignedRolesListSegmentHeight;
        overflow: auto;

        .ui.label {
            margin-top: @assignedRolesListLabelMarginTop;
            margin-left: @assignedRolesListLabelMarginLeft;
            display: inline-flex;
            align-items: center;

            .user-avatar {
                margin: 0px 5px 0px 0px !important;
            }

            &.info-label {
                background-color: @InfoLabelBackgroundColor !important;
                border-color: @InfoLabelBorderColor !important;
                color: white;
                margin-left: @assignedRolesListLabelMarginLeft;

                i {
                    margin-right: auto;
                    margin-left: @assignedRolesListIconMarginLeft;
                }
            }
        }
    }
}

/*************************************
    Create Role Summary Variation
*************************************/

.role-summary-user {
    display: inline-flex;
    margin: 0.2em;
    background-color: #f7f7f7;
    border-radius: 100px;
    align-items: center;
    padding: 0 1em 0 0;
    border: 0.5px solid @RoleSummaryUserListBackgroundColor;

    .circular {
        margin-right: 0.5em !important;
    }
}
